---
interface Props {
  title: string;
  slug: string;
  excerpt: string;
  date: Date;
  tags: string[];
}

const { title, slug, excerpt, date, tags } = Astro.props;
---

<li class="blog-post bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
  <a href={`/blog/${slug}`} class="block">
    <h2 class="text-xl font-bold text-blue-600 hover:underline mb-2">{title}</h2>
    <p class="date text-gray-500 text-sm mb-4">{date.toLocaleDateString('ja-JP')}</p>
    <p class="text-gray-700 mb-4">{excerpt}</p>
    <div class="tags flex flex-wrap gap-2">
      {tags.map(tag => (
          <span class="tag bg-blue-100 text-blue-600 px-2 py-1 rounded-full text-xs">{tag}</span>
      ))}
    </div>
  </a>
</li>
