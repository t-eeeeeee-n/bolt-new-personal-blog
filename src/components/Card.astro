---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-all duration-300">
	<a href={href} class="block p-4 rounded-lg transform transition duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500">
		<h2 class="text-xl font-semibold mb-2 flex justify-between items-center text-white">
			{title}
			<span>&rarr;</span>
		</h2>
		<p class="text-gray-300">
			{body}
		</p>
	</a>
</li>
