---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const tags = [...new Set(posts.flatMap(post => post.data.tags))];
---

<Layout title="タグ一覧">
  <div class="container mx-auto px-6 lg:px-16 max-w-5xl">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">タグ一覧</h1>
    <ul class="flex flex-wrap gap-4">
      {tags.map(tag => (
          <li>
            <a href={`/tags/${tag}`} class="bg-blue-500 text-white px-4 py-2 rounded-full text-sm font-semibold transition hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
              {tag}
            </a>
          </li>
      ))}
    </ul>
  </div>
</Layout>
