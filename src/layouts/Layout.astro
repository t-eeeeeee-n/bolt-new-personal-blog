---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="私の個人ブログサイト" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav class="container">
        <a href="/">ホーム</a>
        <a href="/about">私について</a>
        <a href="/tags">タグ一覧</a>
      </nav>
    </header>
    <main class="container">
      <slot />
    </main>
    <footer>
      <p>&copy; 2023 私のブログ. All rights reserved.</p>
    </footer>
  </body>
</html>